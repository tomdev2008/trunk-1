<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dim_ailiulian_common_margin_half"
    android:layout_marginRight="@dimen/dim_ailiulian_common_margin_half"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dim_ailiulian_common_radius"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    >

    <ImageView
        android:id="@+id/iv_view_imgplaza_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_view_imgplaza_levelsymbol"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_ailiulian_common_margin_half"
        android:adjustViewBounds="true"
        tools:src="@mipmap/abn_yueai_ic_chat_senderror"
        />

    <ImageView
        android:id="@+id/iv_view_imgplaza_vipsymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:paddingRight="@dimen/dim_ailiulian_common_margin_half"
        android:id="@+id/ll_view_imgplaza_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_common_translucent_black_60"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dim_ailiulian_common_margin"
            android:paddingRight="@dimen/dim_ailiulian_common_margin"
            >

            <TextView
                android:id="@+id/tv_view_imgplaza_name"
                style="@style/AbnYueAiText.Micro.White"
                android:maxLines="1"
                tools:text="名字｜职业"
                />

            <TextView
                android:id="@+id/tv_view_imgplaza_location"
                style="@style/AbnYueAiText.Micro.White"
                android:maxLines="1"
                android:textColor="@color/color_common_translucent_white_60"
                android:textSize="@dimen/abn_yueai_dimen_text_nano"
                tools:text="省份|年龄"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibtn_view_imgplaza_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="2dp"
                android:src="@drawable/abn_yueai_selector_hi_plaza"
                />

            <android.support.v4.widget.ContentLoadingProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:id="@+id/pb_view_imgplaza_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>