<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_firstpage_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_firstpage_bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/firstpage_title"
            />

        <Button
            android:id="@+id/btn_firstpage_login"
            style="@style/AbnYueAiButton"
            android:layout_marginTop="60dp"
            android:background="@mipmap/abn_yueai_firstpage_whitebtn"
            android:text="@string/abn_yueai_login"
            android:textColor="@drawable/abn_yueai_selector_color_text_red"/>

        <TextView
            android:id="@+id/btn_firstpage_register"
            style="@style/AbnYueAiText.Normal.White"
            android:layout_marginTop="@dimen/dim_ailiulian_common_margin_double"
            android:drawablePadding="@dimen/dim_ailiulian_common_margin"
            android:drawableRight="@mipmap/abn_yueai_firstpage_arr"
            android:padding="@dimen/dim_ailiulian_common_margin"
            android:text="@string/abn_yueai_register"
            android:textColor="@color/color_common_translucent_white_60"/>
    </LinearLayout>
</FrameLayout>