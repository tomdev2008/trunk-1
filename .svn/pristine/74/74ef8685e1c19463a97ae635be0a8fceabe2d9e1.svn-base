<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/abn_yueai_text_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_ailiulian_common_margin"
        android:paddingLeft="@dimen/dim_ailiulian_common_margin_quard"
        android:paddingRight="@dimen/dim_ailiulian_common_margin_quard"
        android:paddingTop="@dimen/dim_ailiulian_common_margin"
        >

        <TextView
            android:id="@+id/tv_dialog_slelecttruth_question"
            style="@style/AbnYueAiText.Normal.Black"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dim_ailiulian_common_margin"
            android:gravity="center"
            tools:text="真心话大冒险"
            />

        <ListView
            android:id="@+id/listview_dialog_selecttruth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_ailiulian_common_margin"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/dim_ailiulian_common_margin"
            android:listSelector="#00ffffff"
            />

    </LinearLayout>
</RelativeLayout>