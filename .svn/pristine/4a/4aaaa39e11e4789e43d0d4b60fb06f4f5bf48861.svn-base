<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loading_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/dim_aliulian_common_avatar_size_big_half"
        android:layout_height="@dimen/dim_aliulian_common_avatar_size_big_half"
        android:layout_marginRight="@dimen/dim_ailiulian_common_margin_half"
        android:indeterminateDrawable="@drawable/sample_footer_loading_progress"/>

    <TextView
        android:id="@+id/loading_text"
        style="@style/AbnYueAiText.Micro.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_ailiulian_common_margin_half"
        android:text="@string/abn_yueai_loading"
        />
</LinearLayout>