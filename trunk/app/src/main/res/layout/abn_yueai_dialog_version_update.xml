<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abn_yueai_shape_round_white"
        android:orientation="vertical">

        <TextView
            android:textSize="@dimen/normal_text_size_big"
            android:id="@+id/tv_dialog_version_update_title"
            style="@style/AbnYueAiText.Normal.DeepGray"
            android:layout_margin="@dimen/dim_ailiulian_common_margin_double"
            android:text="版本更新" />

        <TextView
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/tv_dialog_version_update_content"
            style="@style/AbnYueAiText.Normal.Gray"
            android:layout_margin="@dimen/dim_ailiulian_common_margin_double"
            android:text="版本更新了哟,要不要试试!" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dim_ailiulian_common_btnheight_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="@dimen/abn_yueai_dimen_button_delete_width"
                android:id="@+id/btn_dialog_version_update_hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="暂不更新"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/abn_yueai_color_red_primaryDark" />

            <TextView
                android:textSize="@dimen/normal_text_size"
                android:layout_toRightOf="@id/btn_dialog_version_update_hold"
                android:id="@+id/btn_dialog_select_version_update_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="立即更新"
                android:paddingLeft="@dimen/dim_ailiulian_common_btnheight_40"
                android:textColor="@color/abn_yueai_color_red_primaryDark" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>