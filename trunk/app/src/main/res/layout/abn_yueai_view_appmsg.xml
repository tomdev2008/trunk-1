<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_view_appmsg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim_ailiulian_common_margin"
        android:background="@drawable/abn_yueai_selector_round_tran_sixty"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_ailiulian_common_margin_half"
        android:paddingTop="@dimen/dim_ailiulian_common_margin_half"

        >

        <com.fatalsignal.view.RoundAngleImageView
            android:id="@+id/riv_view_appmsg_avatar"
            android:layout_width="@dimen/abn_yueai_appmsg_avatar_size"
            android:layout_height="@dimen/abn_yueai_appmsg_avatar_size"
            android:layout_marginLeft="@dimen/dim_ailiulian_common_margin_double"
            android:scaleType="centerCrop"
            android:src="@mipmap/abn_yueai_ic_default_avatar"
            app:isCircle="true"
            app:ringWidth="@dimen/dim_ailiulian_common_divider_wide"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_ailiulian_common_margin"
            android:layout_weight="1.0"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_view_appmsg_title"
                style="@style/AbnYueAiText.Medium.White"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                tools:text="你有一个新的配对"
                />

            <TextView
                style="@style/AbnYueAiText.Micro.White"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_ailiulian_common_margin_half"
                android:background="@drawable/abn_yueai_selector_btn_micro_red"
                android:gravity="center"
                android:text="去看看"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>