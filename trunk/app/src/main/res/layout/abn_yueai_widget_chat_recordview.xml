<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abn_yueai_selector_round_tran_fourty"
                android:orientation="vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_abn_yueai_chat_record_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ease_record_animate_01"/>

    <TextView
        android:id="@+id/tv_abn_yueai_chat_record_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_abn_yueai_chat_record_mic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:text="@string/abn_yueai_chat_record_move_to_cancel"
        android:textSize="10sp"/>

</RelativeLayout>