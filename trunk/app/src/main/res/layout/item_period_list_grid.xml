<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/rl_item_cwd_list_img_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_crowdfunding_list_single_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_crowdfunding_list_single_label"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_item_crowdfunding_list_single_label2"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_item_crowdfunding_list_single_image"
        android:layout_marginBottom="4dp"
        android:gravity="bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_item_crowdfunding_list_single_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="Apple iPhone6s手机 64G 玫瑰金色" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_item_cwd_list_single_addcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="加入购物车" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/btn_item_cwd_list_single_addcart"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_crowdfunding_list_single_periodid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="期号:12346" />

                <TextView
                    android:id="@+id/tv_item_crowdfunding_list_single_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="夺宝进度:80%" />

                <ProgressBar
                    android:id="@+id/pb_item_crowdfunding_list_single_progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:minHeight="4dp"
                    android:progress="60" />


                <TextView
                    android:id="@+id/tv_item_crowdfunding_list_single_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="获得用户:哈哈" />

                <TextView
                    android:id="@+id/tv_item_crowdfunding_list_single_winningnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="中奖号码:23465" />

                <LinearLayout
                    android:id="@+id/ll_item_crowdfunding_list_single_comesoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="即将揭晓:" />

                    <TextView
                        android:id="@+id/tv_item_crowdfunding_list_single_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="20:00:00" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>