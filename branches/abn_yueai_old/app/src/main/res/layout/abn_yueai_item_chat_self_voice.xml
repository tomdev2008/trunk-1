<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_chat_self_voice_voicelength"
        style="@style/AbnYueAiText.Micro.Gray"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dim_ailiulian_common_margin"
        tools:text="9"
        />

    <ImageView
        android:id="@+id/iv_item_chat_self_voice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/abn_yueai_selector_round_red_gradient"
        android:paddingBottom="@dimen/dim_ailiulian_common_margin_double"
        android:paddingLeft="@dimen/dim_ailiulian_common_margin_quard"
        android:paddingRight="@dimen/dim_ailiulian_common_margin_quard"
        android:paddingTop="@dimen/dim_ailiulian_common_margin_double"
        android:src="@drawable/ease_chatto_voice_playing"
        />

</LinearLayout>