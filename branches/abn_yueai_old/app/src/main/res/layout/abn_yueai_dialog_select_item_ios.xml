<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dim_ailiulian_common_margin"
                android:paddingLeft="@dimen/dim_ailiulian_common_margin_triple"
                android:paddingRight="@dimen/dim_ailiulian_common_margin_triple"
                android:paddingTop="@dimen/dim_ailiulian_common_margin"
    >

    <Button
        android:id="@+id/btn_dialog_select_item_ios_cancel"
        style="@style/AbnYueAiButton.CommonLarge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/abn_yueai_selector_dialog_selectitem_ios_cancel"
        android:requiresFadingEdge="none"
        android:text="@string/abn_yueai_cancel"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_dialog_select_item_ios_cancel"
        android:layout_marginBottom="@dimen/dim_ailiulian_common_margin"
        android:background="@drawable/abn_yueai_shape_select_item_ios_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_dialog_select_item_ios_title"
            style="@style/AbnYueAiText.Medium.Black"
            android:layout_gravity="center"
            android:padding="@dimen/dim_ailiulian_common_margin_double"
            />

        <View
            android:id="@+id/view_dialog_select_item_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_ailiulian_common_divider"
            android:background="@drawable/abn_yueai_gradient_horizontal_red"
            />

        <ListView
            android:id="@+id/listview_dialog_selectitem_ios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/abn_yueai_gradient_horizontal_red"
            android:dividerHeight="@dimen/dim_ailiulian_common_divider"
            android:headerDividersEnabled="true"
            />
    </LinearLayout>
</RelativeLayout>