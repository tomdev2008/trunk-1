<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:orientation="vertical">

    <com.gigamole.library.PulseView
        android:id="@+id/pulseView_blurtips_dot"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        app:pv_alpha="70"
        app:pv_color="@color/abn_yueai_text_black"
        app:pv_count="3"
        app:pv_icon="@mipmap/abn_yueai_blur_tips_dot"
        app:pv_interpolator="@android:anim/decelerate_interpolator"
        app:pv_measure="width"
        app:pv_spawn_period="3200"
        />

    <ImageView
        android:id="@+id/iv_blurtips_blurtips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:src="@mipmap/abn_yueai_ic_card_blur_tips"
        />
</FrameLayout>